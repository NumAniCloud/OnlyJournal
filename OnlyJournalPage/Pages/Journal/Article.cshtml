@page
@model OnlyJournalPage.Pages.Journal.ArticleModel

<div class="card">
    <div class="card-body markdown">
        @Html.Raw(Model.ResultingHtml)
    </div>
    <div class="card-footer text-muted">
        <p id="countdown">1000</p>
    </div>
</div>

@section Scripts {
    @if (Model.DoSurfing)
    {
        <script type="text/javascript">
            registerArticleTimer(@Model.StaySeconds, $("#countdown"), "@Url.Page("/Surfing")");
        </script>
    }
}

@section Header {
    <partial name="_TodoPartial" model="Model.ImportantTodo"/>
}