@page
@model OnlyJournalPage.Pages.HabitRecord.ArticleModel

<div class="card">
    <div class="card-body">
        <h2>@Model.Habit.Title</h2>
        <p>
            @for (int i = 0; i < Model.Habit.SuccessCount; i++)
            {
                @:🌟
                if (i % 7 == 6)
                {
                    <br />
                }
            }
        </p>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        setTimeout(function () {
            window.location.href = "@Url.Page("/Surfing")";
        }, 3000);
    </script>
}

@section Header {
    <partial name="_TodoPartial" model="Model.ImportantTodo" />
}