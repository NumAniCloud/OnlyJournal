@page
@model OnlyJournalPage.Pages.HabitRecord.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HabitRecord[(int)0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HabitRecord[(int)0].SuccessCount)
            </th>
            <th>CountUp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.HabitRecord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuccessCount)
            </td>
            <td>
                <form method="post">
                    <button type="submit" name="id" value="@item.Id">+</button>
                </form>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
